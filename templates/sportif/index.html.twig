{% extends 'base.html.twig' %}

{% block title %}Espace Sportif{% endblock %}

{% block body %}

<h1>Bienvenue {{ user.email }}</h1>

<h2>Mes Objectifs</h2>

{% if objectifs is empty %}
    <p>Aucun objectif pour le moment.</p>
{% else %}
    <ul>
        {% for objectif in objectifs %}
            <li>
                <strong>{{ objectif.titre }}</strong><br>
                {{ objectif.description }}
            </li>
        {% endfor %}
    </ul>
{% endif %}

{% endblock %}
